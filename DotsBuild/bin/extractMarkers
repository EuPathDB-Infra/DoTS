#!@perl@

use strict;
use lib "$ENV{GUS_HOME}/lib/perl";
use Getopt::Long;
use GUS::ObjRelP::DbiDatabase;
use GUS::Common::GusConfig;

my ($verbose,$taxon_id,$gusConfigFile,$outputFile);
&GetOptions("verbose!"=> \$verbose,
            "taxon_id=s" => \$taxon_id,
            "gusConfigFile=s" => \$gusConfigFile,
            "outputFile=s" => \$outputFile);

die "usage: extractMarkers --taxon_id --verbose --gusConfigFile [\$GUS_CONFIG_FILE]\n" unless $taxon_id;

print STDERR "Establishing dbi login\n" if $verbose;

my $gusconfig = GUS::Common::GusConfig->new($gusConfigFile);

my $db = GUS::ObjRelP::DbiDatabase->new($gusconfig->getDbiDsn(),
					$gusconfig->getReadOnlyDatabaseLogin(),
					$gusconfig->getReadOnlyDatabasePassword(),
					$verbose,0,1,
					$gusconfig->getCoreSchemaName());

my $dbh = $db->getQueryHandle();

my $sth = $dbh->prepare ("select rh_marker_id, forward_primer, reverse_primer, product_length from Dots.RHMarker where taxon_id = $taxon_id");

$sth->execute ();

open (OUTPUT, "> $outputFile");

while (my @ary = $sth->fetchrow_array ())

{

    print OUTPUT (join ("\t", @ary), "\n");

}

$sth->finish ();



$dbh->disconnect ();

exit (0);


