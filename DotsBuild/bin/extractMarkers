#!@perlLocation@

use DBI;

use DBD::Oracle;
use GUS::Common::GusConfig;


my $taxon = shift
my $gusConfigFile = shift;

my $gusconfig = GUS::Common::GusConfig->new($gusConfigFile);

$dbh = DBI->connect($gusconfig->getDbiDsn(),
		    $gusconfig->getReadOnlyDatabaseLogin(),
		    $gusconfig->getReadOnlyDatabasePassword());

$dbh->{RaiseError} = 1;

$dbh->{AutoCommit} = 0;



my $sth = $dbh->prepare ("select rh_marker_id, forward_primer, reverse_primer, product_length from Dots.RHMarker where taxon_id = $taxon");

$sth->execute ();



while (@ary = $sth->fetchrow_array ())

{

    print join ("\t", @ary), "\n";

}

$sth->finish ();



$dbh->disconnect ();

exit (0);


