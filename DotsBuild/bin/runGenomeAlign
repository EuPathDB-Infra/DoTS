#!@perl@

use strict;

use lib "$ENV{GUS_HOME}/lib/perl";
use CBIL::Util::Utils;
use GUS::Pipeline::TaskRunAndValidate;

$| = 1;
umask 002;

my $buildDir = $ARGV[0];
my $numnodes = $ARGV[1];

if (!($buildDir && $numnodes)) {
    print "usage:  runGenomeAlign buildDir numnodes\n";
    exit(1);
}

die "Build dir $buildDir doesn't exist" unless -d $buildDir;

print "\n";

my $assemSeqsRM = &runRepeatMask($buildDir, $numnodes, "assemSeqs", 10080);

&runGenomeAlign($buildDir, $numnodes, "assemSeqs", "genome", 10080) if $assemSeqsRM;

print "Done\n";

