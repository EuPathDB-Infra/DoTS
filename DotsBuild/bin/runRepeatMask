#!@perl@

use strict;

use lib "$ENV{GUS_HOME}/lib/perl";
use CBIL::Util::Utils;
use GUS::Pipeline::TaskRunAndValidate;
use Getopt::Long;

$| = 1;
umask 002;
my ($buildDir,$numnodes,$queue,$query);
&GetOptions("buildDir=s" => \$buildDir,
	    "numnodes=i" => \$numnodes,
	    "query=s" => \$query,
	    "queue=s" => \$queue);



if (!($buildDir && $numnodes && $query)) {
    print "usage:  runRepeatMask --buildDir --numnodes --query --queue (opt)\n";
    exit();
}

die "Build dir $buildDir doesn't exist" unless -d $buildDir;

print "\n";

&runRepeatMask($buildDir, $numnodes, "$query", 10080, $queue);

print "Done\n";

